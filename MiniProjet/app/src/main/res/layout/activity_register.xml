<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="16dp"
    android:weightSum="8"
    android:background="@drawable/gradient_bg"
    tools:context=".Controllers.RegisterActivity">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="8"
    android:orientation="vertical"
    android:gravity="center">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Inscrivez Vous!"
        android:layout_margin="5dp"
        android:textSize="30sp"
        android:textColor="@android:color/white"
        android:layout_gravity="center_horizontal" />

    <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@+id/edt_name"
        android:hint="Nom:"
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:met_textColor="#AFAFAF"
        app:met_baseColor="@android:color/white"
        app:met_primaryColor="@android:color/white"
        app:met_iconLeft="@drawable/ic_action_name"
        app:met_iconPadding="0dp"
        />
    <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@+id/edt_prenom"
        android:hint="Prenom:"
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:met_textColor="#AFAFAF"
        app:met_baseColor="@android:color/white"
        app:met_primaryColor="@android:color/white"
        app:met_iconLeft="@drawable/ic_lock"
        app:met_iconPadding="0dp"
        />
    <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@+id/edt_email"
        android:hint="Email:"
        android:inputType="textEmailAddress"
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:met_textColor="#AFAFAF"
        app:met_baseColor="@android:color/white"
        app:met_primaryColor="@android:color/white"
        app:met_iconLeft="@drawable/ic_lock"
        app:met_iconPadding="0dp"
        />
    <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@+id/edt_tel"
        android:hint="NumÃ©ro Telephone:"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:met_textColor="#AFAFAF"
        app:met_baseColor="@android:color/white"
        app:met_primaryColor="@android:color/white"
        app:met_iconLeft="@drawable/ic_lock"
        app:met_iconPadding="0dp"
        />
    <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@+id/edt_password"
        android:hint="Mot De Passe"
        android:layout_margin="5dp"
        android:inputType="textPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:met_textColor="#AFAFAF"
        app:met_baseColor="@android:color/white"
        app:met_primaryColor="@android:color/white"
        app:met_iconLeft="@drawable/ic_lock"
        app:met_iconPadding="0dp"
        />
    <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@+id/edt_Copassword"
        android:hint="Confirmer Mot De Passe"
        android:layout_margin="5dp"
        android:inputType="textPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:met_textColor="#AFAFAF"
        app:met_baseColor="@android:color/white"
        app:met_primaryColor="@android:color/white"
        app:met_iconLeft="@drawable/ic_lock"
        app:met_iconPadding="0dp"
        />
    <com.google.android.material.button.MaterialButton
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_margin="5dp"
        android:id="@+id/enregistrer"
        android:text="ENREGISTRER"
        android:textSize="18sp"
        android:textColor="@android:color/white"
        style="@style/Widget.MaterialComponents.Button.UnelevatedButton"
        android:layout_marginLeft="8dp"
        />
</LinearLayout>


</LinearLayout>